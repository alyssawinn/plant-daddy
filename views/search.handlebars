<div class="flex-container search-page">
    <section>
        <div class="search-bar">
            <h1>Browse Plants</h1>
            {{> searchbar}}
        </div>
    </section>
    <section>
        <div class="plant-container">
            {{#each plants as |plant|}}
            <div class="card plant-card">
                <div class="card-body">
                    {{> plants-info plant}}
                    {{> add-btn}}
                </div>
            </div>
        </div>
    </section>
</div>